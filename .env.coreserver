# コアサーバー用環境設定
APP_NAME="らくらくセルフ面接"
APP_ENV=production
APP_KEY=base64:CHANGE_THIS_TO_GENERATED_KEY
APP_DEBUG=false
APP_TIMEZONE=Asia/Tokyo
APP_URL=https://casmen.bungo-yoshiba.com

APP_LOCALE=ja
APP_FALLBACK_LOCALE=ja
APP_FAKER_LOCALE=ja_JP

# コアサーバー用データベース設定
DB_CONNECTION=mysql
DB_HOST=mysql1234.coreserver.jp
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# セッション設定（ファイルベース）
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# キャッシュ設定
CACHE_DRIVER=file
CACHE_PREFIX=

# キュー設定（同期処理）
QUEUE_CONNECTION=sync

# メール設定（コアサーバーのSMTP）
MAIL_MAILER=smtp
MAIL_HOST=smtp.coreserver.jp
MAIL_PORT=587
MAIL_USERNAME=your_email@yourdomain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="らくらくセルフ面接"

# ログ設定
LOG_CHANNEL=single
LOG_STACK=single
LOG_LEVEL=error

# ファイルシステム
FILESYSTEM_DISK=local

# FFmpeg無効化フラグ
FFMPEG_ENABLED=false
USE_LITE_VIDEO_PROCESSING=true

# アップロード制限
MAX_UPLOAD_SIZE=50M
MAX_EXECUTION_TIME=300
